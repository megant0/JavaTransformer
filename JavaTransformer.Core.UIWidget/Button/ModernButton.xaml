<UserControl x:Class="JavaTransformer.Core.UIWidget.ModernButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JavaTransformer.Core.UIWidget"
             mc:Ignorable="d" 
             Name="modernButton"
             >
    <Border Background="{Binding Background, ElementName=modernButton}"
            BorderBrush="{Binding BorderBrush, ElementName=modernButton}"
            BorderThickness="{Binding BorderThickness, ElementName=modernButton}"
            CornerRadius="{Binding CornerRadius, ElementName=modernButton}"
            Name="CurrentBorder"
            >

            <TextBlock HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Text="{Binding Text, ElementName=modernButton}" />

        
    </Border>
</UserControl>
