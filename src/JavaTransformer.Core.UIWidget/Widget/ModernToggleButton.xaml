<UserControl x:Class="JavaTransformer.Core.UIWidget.Widget.ModernToggleButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JavaTransformer.Core.UIWidget.Widget"
             mc:Ignorable="d"
             Name="modernToggleButton"
             Foreground="{Binding OtherColor,ElementName=modernToggleButton}">
    <Grid>
        <Border Width="{Binding Width, ElementName=modernToggleButton}"
                Height="{Binding Height, ElementName=modernToggleButton}"
                Background="{Binding Color, ElementName=modernToggleButton}"
                CornerRadius="{Binding CornerRadius, ElementName=modernToggleButton}"
                BorderBrush="{Binding Border, ElementName=modernToggleButton}"
                BorderThickness="{Binding Thickness, ElementName=modernToggleButton}"
                x:Name="_CurrentBorder">

            <TextBlock HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Text="{Binding Text,ElementName=modernToggleButton}" />
        </Border>
    </Grid>
</UserControl>
