<UserControl x:Class="JavaTransformer.Core.UIWidget.Widget.ModernButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:JavaTransformer.Core.UIWidget.Widget"
             mc:Ignorable="d"
             Name="modernButton"
             Foreground="{Binding OtherColor,ElementName=modernButton}"
          
             >
    <Grid>
        <Border Width="{Binding Width, ElementName=modernButton}"
                Height="{Binding Height, ElementName=modernButton}"
                Background="{Binding Color, ElementName=modernButton}"
                CornerRadius="{Binding CornerRadius, ElementName=modernButton}"
                BorderBrush="{Binding Border, ElementName=modernButton}"
                BorderThickness="{Binding Thickness, ElementName=modernButton}"
                x:Name="_CurrentBorder"
            >

            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                 Text="{Binding Text,ElementName=modernButton}"
                />
        </Border>
    </Grid>
</UserControl>
