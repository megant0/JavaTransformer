<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="JavaTransformer.UI.MainDesktop.RenameFileWindow"
        Title="Введите новое имя файла"
        Width="400"
        SizeToContent="Height"
        MinHeight="90"
        MaxHeight="150"
        WindowStartupLocation="CenterOwner"
        Background="#1d1d1d"
        CanResize="False">
	<Border
		BorderBrush="Purple"
		BorderThickness="1"
		>
		
	<StackPanel Margin="8" Spacing="8"
				>
		<TextBlock Foreground="White" Text="Введите новое имя файла:"/>
		<TextBox x:Name="FileNameTextBox" Watermark="Имя файла" Height="28"/>
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
			<Button Foreground="White" Content="Отмена" Click="CancelButton_Click" Width="70" Height="28"/>
			<Button Foreground="White" Content="ОК" Click="OkButton_Click" IsDefault="True" Width="44" Height="28"/>
		</StackPanel>
	</StackPanel>

	</Border>
</Window>
