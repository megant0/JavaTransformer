<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:JavaTransformer.UI.MainDesktop.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:AvaloniaEdit="clr-namespace:AvaloniaEdit;assembly=AvaloniaEdit"
		mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="JavaTransformer.UI.MainDesktop.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="JavaTransformer.UI.MainDesktop"
		Background="#1d1d1d"
		
		>

    <Design.DataContext>
       <vm:MainWindowViewModel/>
    </Design.DataContext>

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="35"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<Grid
			x:Name="headerGrid"
			>
			<Menu Background="Transparent" Foreground="White"
				  HorizontalAlignment="Left"
				  Margin="15"
				  >
				<MenuItem Header="{Binding MenuItemHeaderFile}" Foreground="White"
						  IsTabStop="False" Focusable="False"
						  >
					<MenuItem
					Header="{Binding MenuItemHeaderFile_Save}"
					Foreground="White"
						>

					</MenuItem>
				</MenuItem>
				<MenuItem Header="{Binding MenuItemHeaderView}" Foreground="White"
						  IsTabStop="False" Focusable="False">
				</MenuItem>
				<MenuItem Header="{Binding MenuItemHeaderBuild}" Foreground="White"
						  IsTabStop="False" Focusable="False">
					<MenuItem
						Header="{Binding MenuItemHeaderBuild_Launch}"
						Foreground="White"
						>
					</MenuItem>
				</MenuItem>
			</Menu>
		</Grid>
		<Grid
			Grid.Row="1"
			Background="#1d1d1d"
			>

			<AvaloniaEdit:TextEditor
				Margin="25,35,25,25"
				ShowLineNumbers="True"
				Background="#2d2d2d"
				x:Name="_textEditor"
				>
				
			</AvaloniaEdit:TextEditor>
			
		</Grid>
	</Grid>
    
</Window>
